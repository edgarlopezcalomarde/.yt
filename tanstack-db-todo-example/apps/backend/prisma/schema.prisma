  completed  Boolean?  @default(false, map: "DF__todos__completed__3E52440B")
  created_at DateTime? @default(now(), map: "DF__todos__created_a__3F466844") @db.DateTimeOffset
  updated_at DateTime? @default(now(), map: "DF__todos__updated_a__403A8C7D") @db.DateTimeOffset
}
